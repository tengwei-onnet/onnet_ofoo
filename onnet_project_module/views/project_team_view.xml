<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_team_tree" model="ir.ui.view">
        <field name="name">project.team.tree</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <tree string="Teams" sample="1">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_project_team_form" model="ir.ui.view">
        <field name="name">project.team.form</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_task"
                                class="oe_stat_button"
                                icon="fa-tasks">
                            <field name="count_task" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_id">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name" readonly="1" string="Task ID"/>
                                        <field name="project_id" readonly="1" string="Project"/>
                                        <field name="user_ids" readonly="1" widget="many2many_avatar_user"/>
                                        <field name="date_deadline" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_team" model="ir.actions.act_window">
        <field name="name">Project Teams</field>
        <field name="res_model">project.team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Team!
            </p>
        </field>
    </record>

    <menuitem id="menu_project_team"
              name="Project Teams"
              action="action_project_team"
              parent="project.menu_project_config"
              sequence="0"/>

</odoo>