<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="contactus_thanks_osp" name="Thanks (Contact us)" inherit_id="website_form.contactus_thanks_ir_ui_view">
        <xpath expr="//div[hasclass('col-lg-4')]" position="replace"/>
        <xpath expr="//div[hasclass('col-lg-7')]" position="attributes">
            <attribute name="class">col-lg-12 col-xl-12 mr-lg-auto oe_structure</attribute>
        </xpath>
        <xpath expr="//span[hasclass('rounded-circle')]" position="attributes">
            <attribute name="class">d-block fa fa-5x fa-thumbs-up mx-auto rounded-circle bg-primary shadow text-100</attribute>
        </xpath>
        <xpath expr="//h1" position="replace">
            <h1 class="text-center text-primary"><b>Thank You!</b></h1>
        </xpath>
        <xpath expr="//hr" position="attributes">
            <attribute name="style">border-top-width: 5px !important; border-top-color: #f6f6f6 !important;</attribute>
        </xpath>
        <xpath expr="//h5" position="attributes">
            <attribute name="style">font-size: 24px;</attribute>
        </xpath>
        <xpath expr="//p" position="attributes">
            <attribute name="style">font-size: 18px;</attribute>
        </xpath>
    </template>

</odoo>
